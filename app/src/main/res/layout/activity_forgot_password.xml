<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@drawable/signin_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coopbl"
        android:layout_marginTop="120sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Recovery"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Enter you email address to reset your password. A reset link will be sent to your e-mail"
        android:gravity="center"
        android:layout_marginTop="100sp"
        android:textSize="20sp"
        android:fontFamily="@font/ftltlt"
        android:textColor="#FF0000"/>


    <EditText
        android:id="@+id/forPassEmail"
        android:layout_width="360sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:hint=" E-mail"
        android:backgroundTint="#DBCBEF"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10sp"
        android:paddingRight="15sp"
        android:paddingLeft="9sp"
        android:fontFamily="@font/ftltlt"
        android:inputType="text"
        android:background="@drawable/round_shape"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resetBtn"
        android:layout_width="220sp"
        android:layout_height="50sp"
        android:text="Reset password"
        android:fontFamily="@font/coopbl"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/round_shape"
        android:backgroundTint="#9A62CC"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        />

    <ProgressBar
        android:id="@+id/forpBar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:progressBackgroundTint="#FF9A62CC"/>

</androidx.appcompat.widget.LinearLayoutCompat>