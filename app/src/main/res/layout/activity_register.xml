<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_gravity="center_vertical"
    android:background="@drawable/signin_bg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coopbl"
        android:layout_marginTop="120sp"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:layout_marginTop="80sp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">


        <EditText
            android:id="@+id/reg_emailText"
            android:layout_width="360sp"
            android:layout_height="50sp"
            android:layout_marginTop="80sp"
            android:layout_gravity="center"
            android:hint=" E-mail"
            android:backgroundTint="#DBCBEF"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10sp"
            android:paddingLeft="9sp"
            android:fontFamily="@font/ftltlt"
            android:inputType="text"
            android:background="@drawable/round_shape"
            />

        <EditText
            android:id="@+id/reg_passText"
            android:layout_width="360sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/round_shape"
            android:backgroundTint="#DBCBEF"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="11sp"
            android:fontFamily="@font/ftltlt"
            android:hint=" Password"
            android:inputType="textPassword"
            android:paddingLeft="14sp" />


        <EditText
            android:id="@+id/reg_conPassText"
            android:layout_width="360sp"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:background="@drawable/round_shape"
            android:drawableLeft="@drawable/confirm"
            android:paddingLeft="14sp"
            android:hint=" Confirm Password"
            android:backgroundTint="#DBCBEF"
            android:fontFamily="@font/ftltlt"
            android:drawablePadding="10sp"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="360sp"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:hint="Phone"
            android:text="+880"

            android:drawableLeft="@drawable/phone"
            android:backgroundTint="#DBCBEF"
            android:drawablePadding="10sp"
            android:paddingLeft="10sp"
            android:fontFamily="@font/ftltlt"
            android:inputType="text"
            android:background="@drawable/round_shape"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reg_btn"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Register"
            android:fontFamily="@font/coopbl"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape"
            android:backgroundTint="#9A62CC"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="Already registered?"
                android:fontFamily="@font/ftltlt"
                android:textSize="15sp"
                android:textColor="#9A62CC"
                android:gravity="center"/>
            <TextView
                android:id="@+id/reg_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text=" Sign in"
                android:fontFamily="@font/coopbl"
                android:textSize="14sp"
                android:textColor="#9A62CC"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>